<VHLayout orientation="V"
    flag="flag_clickable|flag_exposure"
    layoutWidth="68"
    layoutHeight="wrap_content"
    actionParam="${schemeUrl}"
    dataParam="${nesScmExtra}">
    <NImageEx layoutWidth="68"
        layoutHeight="68"
        scaleType="fit_center"
        layoutMarginTop="4"
        layoutGravity="h_center"
        src="${items[0].picUrl}"/>
    <NText text="${title}"
        textSize="11"
        textColor="#AD882B"
        ellipsize="end"
        maxLines="1"
        borderRadius="8"
        borderWidth="1"
        borderColor="#AD882B"
        paddingLeft="6"
        paddingRight="6"
        paddingTop="1"
        paddingBottom="1"
        layoutMarginTop="2"
        layoutGravity="h_center"
        layoutWidth="wrap_content"
        layoutHeight="wrap_content"/>
</VHLayout>
